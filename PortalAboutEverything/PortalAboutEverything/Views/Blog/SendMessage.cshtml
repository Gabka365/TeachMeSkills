@model PortalAboutEverything.Models.Blog.MessageViewModel
@using PortalAboutEverything.LocalizationResources.Blog


<div class="section-output">
    <header>
        <link href="/css/Blog/menu.css?v=1.1" rel="stylesheet" />
    </header>
    <body>
        <form action="/Blog/ReceiveMessage" method="post">
            <div class="sending">
                <div class="header">
                    <div class="inf-about-author">
                        <img src="/images/Blog/jpeg/first_ava.jpg" />
                        @Model.CurrentTime <br>
                        <input type="hidden" name="Now" value="@Model.CurrentTime" />
                        @Blog_AdditionalContent.From: @Model.Name <br>
                        <input type="hidden" name="Name" value="@Model.Name" />
                    </div>
                    <div class="text-field">
                        <textarea name="message" placeholder="Enter Message"></textarea>
                    </div>
                </div>

                <div class="mood-rate">
                    @Blog_AdditionalContent.VerificationString
                </div>

                <div class="mood-rate">
                    @Blog_AdditionalContent.FirstNumber: @Html.TextBoxFor(x => x.Number_1)
                </div>
                <div class="mood-rate">
                    @Blog_AdditionalContent.SecondNumber: @Html.TextBoxFor(x => x.Number_2)
                </div>

                <span class="Submit">
                    <input type="submit" name="name" value="Submit" />
                </span>
            </div>
        </form>
    </body>
</div>
