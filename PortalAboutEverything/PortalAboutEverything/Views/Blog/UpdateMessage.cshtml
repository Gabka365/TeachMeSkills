@model PortalAboutEverything.Models.Blog.PostUpdateViewModel


<div class="section-output">
    <header>
        <link href="/css/Blog/receivingStyle.css" rel="stylesheet" />
    </header>
    <body>
        <form action="/Blog/UpdatePost" method="post">
            @Html.HiddenFor(x => x.Id)
            <div class="sending">
                <div class="header">
                    <div class="inf-about-author">
                        <img src="/images/Blog/jpeg/first_ava.jpg" />
                        @Model.Now <br>
                        <input type="hidden" name="Now" value="@Model.Now" />
                        from: @Model.Name <br>
                        <input type="hidden" name="Name" value="@Model.Name" />
                    </div>
                    <div class="text-field">
                        @Html.TextAreaFor(x => x.message)
                    </div>
                </div>
                <span class="Submit">
                    <input type="submit" name="name" value="Update" />
                </span>
            </div>
        </form>
    </body>

</div>