@model List<PortalAboutEverything.Models.History.HistoryIndexViewModel>

    
<div class="events">
    Список событий
    @foreach (var historicalEvent in Model)
    {
       <div class="event">
          Название - @historicalEvent.Name  
              Дата - @historicalEvent.YearOfEvent 
          Описание - @historicalEvent.Description
            <a href="/History/Update?id=@historicalEvent.Id">редактировать</a>
          <a href="/History/Delete?id=@historicalEvent.Id" class="delete">Удалить</a>
       </div>         
    }
</div>

<div>
    <a href="/History/Create">Добавить событие</a>
</div>

