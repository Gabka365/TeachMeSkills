@model PortalAboutEverything.Models.Movie.IndexMovieAdminViewModel

@section Style {
				<link rel="stylesheet" href="/css/Movie/movieStyle.css?=1" />
}

<div>
	Выберете действие:
</div>
<div>
	@if (User.Identity?.IsAuthenticated ?? false)
	{
		<a href="/Movie/GiveFeedback">Оставить отзыв</a>
	}
</div>
<div>
	@if (Model.IsMovieAdmin)
	{
		<a href="/Movie/CreateMovie">Создать фильм</a>
	}
</div>
<div>
	@if (User.Identity?.IsAuthenticated ?? false)
	{
		<a href="/Movie/MoviesFan">Страничка киномана</a>
	}
</div>
<div>
	Список фильмов:
</div>
<div class="movies">
	@foreach (var movie in Model.Movies)
	{
		<div class="infoAboutMovie">
			<span class="movieName">Фильм <a href="/Movie/UpdateMovie?id=@movie.Id">@movie.Name</a></span> 
			<div>Дата выхода: @movie.ReleaseYear год</div>
			<div>Режиссер фильма: @movie.Director</div>
			<div>Страна происхождения: @movie.CountryOfOrigin</div>
			<div>Бюджет фильма: @movie.Budget</div>
			<div>Описание фильма:</div>
			<div class="movieDescription">@movie.Description</div>
			<div>
				<a href="/Movie/DeleteMovie?id=@movie.Id">Удалить</a> 
			</div>
			<form action="/Movie/AddMovieToMoviesFan" method="post">
				<input type="hidden" value="@movie.Id" name="movieId" />
				<input type="submit" value="Добавить @movie.Name в избранное" />
			</form>
			<div>
				<a href="/Movie/MovieAddReview?id=@movie.Id">Написать отзыв фильму "@movie.Name"</a>
			</div>
			@foreach (var review in movie.Reviews)
			{
				<div class="review">
					<div class="dateReview">@review.DateOfCreation</div>
					<div class="comment">@review.Comment. Оценка: @review.Rate</div>
				</div>
			}
		</div>
	}
</div>