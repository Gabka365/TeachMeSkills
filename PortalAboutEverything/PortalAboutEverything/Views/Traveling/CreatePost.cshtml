@model PortalAboutEverything.Models.Traveling.TravelingCreateViewModel

@section Style {
    <link rel="stylesheet" href="/css/Traveling/posts/Create.css" />
    <link rel="stylesheet" href="/css/Traveling/nicepage.css" />
}


<div class="u-body u-xl-mode">
    <section class="u-align-center u-clearfix u-container-align-center u-image u-shading u-section-1" src="" data-image-width="1280" data-image-height="720">
        <div class="u-clearfix u-sheet u-sheet-1">
            <div class="u-form u-form-1">
                <form method="post" class="u-clearfix u-form-spacing-10 u-form-vertical u-inner-form" name="form" style="padding: 10px;" enctype="multipart/form-data">
                    <div class="u-form-group u-form-group-1">
                        <label class="u-label">Название</label>
                        @Html.TextBoxFor(x => x.Name, new { placeholder = "Название поста", @class = "u-input u-input-rectangle" })
                    </div>
                    <div class="u-form-group u-form-message">
                        <label class="u-label">Отзыв</label>
                        @Html.TextAreaFor(x => x.Desc, new { placeholder = "Оставьте свой отзыв", @class = "u-input u-input-rectangle", @rows = "4", @cols = "50" })
                    </div>
                    <div class="u-form-group u-form-message">
                        <label for="file-upload" class="u-label custom-file-upload">Загрузить изображение</label>
                        <input id="file-upload" class="file-input" type="file" name="image" placeholder="Выбрать изображение" onchange="updateFileName(this.value)" />
                        <span class="file-name"></span>
                    </div>
                    <div class="u-align-left u-form-group u-form-submit">
                        <input type="submit" value="Создать " class="u-btn u-btn-submit u-button-style u-btn-1" />
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script>
        function updateFileName(value) {
            var fileName = value.split('\\').pop();
            var elements = document.getElementsByClassName('file-name');
                elements[0].textContent = fileName ? "Выбран файл: " + fileName : "";
        }
    </script>
}