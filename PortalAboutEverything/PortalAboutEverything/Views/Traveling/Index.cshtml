@model PortalAboutEverything.Models.Traveling.TravelingIndexViewModel
@using PortalAboutEverything.LocalizationResources
@section Style {
    <link rel="stylesheet" href="/css/Traveling/style.css" />
}
@section Scripts {
    <script src="/js/Traveling/index.js"></script>
}

<div class="site-container">
    <div class="site-bg">
        <div class="header container flex">

            <a href="#" class="header_logo">Escape.</a>

            <ul class="header_list flex">

                <li class="header_list-items">
                    <a href="/Traveling/TravelingApiInfo" class="header_list-item">
                        TravelingApiInfo
                    </a>
                </li>

                <li class="header_list-items">
                    <a href="#" class="header_list-item">
                        @Traveling_Index.Home
                    </a>
                </li>

                <li class="header_list-items">
                    <a href="#" class="header_list-item">
                        @Traveling_Index.Categories
                    </a>
                </li>

                <li class="header_list-items">
                    <a href="#" class="header_list-item">
                        @Traveling_Index.About
                    </a>
                </li>

                <li class="header_list-items">
                    <a href="#" class="header_list-item">
                        @Traveling_Index.Contact
                    </a>
                </li>

                @if (Model.IsTravingAdmin)
                {
                    <li class="header_list-items">
                        <a href="ChengeIndexPage" class="header_list-item">
                            @Traveling_Index.ChengIndex
                        </a>
                    </li>
                }
            </ul>
        </div>
        <div class="wrapper_title grid">
            <h1 class="header_title">
                @Traveling_Index.IndexTitle
            </h1>

            <p class="header_disc">
                @Traveling_Index.IndexTitleDesc
            </p>
            <div class="wraper_btn">

                <a href="/Traveling/TravelingPosts" class="title_btn btn-reset traveling-post-link">
                    @Traveling_Index.IndexTitleBtn
                </a>
            </div>

        </div>
    </div>
    <div class="wrrape_nav_bg">
        <ul class="nav_bg flex">
            <li class="nav_bg-items">
                <a href="#" class="nav_bg-item"> @Traveling_Index.Nature</a>
            </li>
            <li class="nav_bg-items">
                <a href="#" class="nav_bg-item"> @Traveling_Index.Photography</a>
            </li>
            <li class="nav_bg-items">
                <a href="#" class="nav_bg-item"> @Traveling_Index.Relaxation</a>
            </li>
            <li class="nav_bg-items">
                <a href="#" class="nav_bg-item"> @Traveling_Index.Vacation</a>
            </li>
            <li class="nav_bg-items">
                <a href="#" class="nav_bg-item"> @Traveling_Index.Travel</a>
            </li>
            <li class="nav_bg-items">
                <a href="#" class="nav_bg-item"> @Traveling_Index.Adventure</a>
            </li>
        </ul>
    </div>
    <!-- mian -->
    <main calss="main">
        <div class="container">
            <!-- featured -->
            <section class="featured">
                <div class="wriper__title">
                    <h2 class="featured__title"> @Traveling_Index.FeaturedPosts</h2>
                </div>
                <div class="featured__cards grid">

                    <div class="featured__card card-left">
                        <h3 class="card-title">
                            The Road Ahead
                        </h3>

                        <p class="card-desc">
                            The road ahead might be paved - it might not be.
                        </p>
                        <div class="card__wrapper-ava flex">
                            <p class="card__ava">
                                Mat Vogels
                            </p>

                            <p class="card__data">
                                @Model.TravelingDates[1].ToString("MMMM dd, yyyy", System.Globalization.CultureInfo.InvariantCulture)
                            </p>
                        </div>
                    </div>

                    <div class="featured__card card-right">

                        <button class="card__btn btn-reset">Adventure</button>

                        <h3 class="card-title">
                            From Top Down
                        </h3>

                        <p class="card-desc">
                            Once a year, go someplace you’ve never been before.
                        </p>
                        <div class="card__wrapper-ava flex">
                            <p class="card__ava">
                                William Wong
                            </p>

                            <p class="card__data">
                                @Model.TravelingDates[2].ToString("MMMM dd, yyyy", System.Globalization.CultureInfo.InvariantCulture)
                            </p>
                        </div>
                    </div>

                </div>
            </section>
            <!-- Most Recent -->
            <section class="mostRecent">

                <div class="mostRecent__wrapper-title">
                    <h2 class="mostRecent-title">
                        @Traveling_Index.MostRecent
                    </h2>
                </div>

                <div class="mostRecent__wrapper-cards grid">

                    <div class="mostRecent-card ">

                        <div class="card-img card1"></div>

                        <h3 class="mostRecent__card-title">Still Standing Tall</h3>
                        <p class="mostRecent__card-desc">Life begins at the end of your comfort zone.</p>

                        <div class="mostRecent__card__wrapper-ava flex">
                            <p class="mostRecent__card__ava">
                                William Wong
                            </p>

                            <p class="mostRecent__card__data">
                                @Model.TravelingDates[3].ToString("MMMM dd, yyyy", System.Globalization.CultureInfo.InvariantCulture)
                            </p>
                        </div>
                    </div>

                    <div class="mostRecent-card">

                        <div class="card-img card2"></div>

                        <h3 class="mostRecent__card-title">Sunny Side Up</h3>
                        <p class="mostRecent__card-desc">No place is ever as bad as they tell you it’s going to be.</p>

                        <div class="mostRecent__card__wrapper-ava flex">
                            <p class="mostRecent__card__ava">
                                Mat Vogels
                            </p>

                            <p class="mostRecent__card__data">
                                @Model.TravelingDates[4].ToString("MMMM dd, yyyy", System.Globalization.CultureInfo.InvariantCulture)
                            </p>
                        </div>
                    </div>

                    <div class="mostRecent-card">

                        <div class="card-img card3"></div>

                        <h3 class="mostRecent__card-title">Water Falls</h3>
                        <p class="mostRecent__card-desc">We travel not to escape life, but for life not to escape us.</p>

                        <div class="mostRecent__card__wrapper-ava flex">
                            <p class="mostRecent__card__ava">
                                Mat Vogels
                            </p>

                            <p class="mostRecent__card__data">
                                @Model.TravelingDates[5].ToString("MMMM dd, yyyy", System.Globalization.CultureInfo.InvariantCulture)
                            </p>
                        </div>
                    </div>

                    <div class="mostRecent-card">

                        <div class="card-img card4"></div>

                        <h3 class="mostRecent__card-title">Through the Mist</h3>
                        <p class="mostRecent__card-desc">Travel makes you see what a tiny place you occupy in the world.</p>

                        <div class="mostRecent__card__wrapper-ava flex">
                            <p class="mostRecent__card__ava">
                                William Wong
                            </p>

                            <p class="mostRecent__card__data">
                                @Model.TravelingDates[0].ToString("MMMM dd, yyyy", System.Globalization.CultureInfo.InvariantCulture)
                            </p>
                        </div>
                    </div>

                    <div class="mostRecent-card">

                        <div class="card-img card5"></div>

                        <h3 class="mostRecent__card-title">Awaken Early</h3>
                        <p class="mostRecent__card-desc">Not all those who wander are lost.</p>

                        <div class="mostRecent__card__wrapper-ava flex">
                            <p class="mostRecent__card__ava">
                                William Wong
                            </p>

                            <p class="mostRecent__card__data">
                                @Model.TravelingDates[1].ToString("MMMM dd, yyyy", System.Globalization.CultureInfo.InvariantCulture)
                            </p>
                        </div>
                    </div>

                    <div class="mostRecent-card">

                        <div class="card-img card6"></div>

                        <h3 class="mostRecent__card-title">Try it Always</h3>
                        <p class="mostRecent__card-desc">The world is a book, and those who do not travel read only one page.</p>

                        <div class="mostRecent__card__wrapper-ava flex">
                            <p class="mostRecent__card__ava">
                                William Wong
                            </p>

                            <p class="mostRecent__card__data">
                                @Model.TravelingDates[2].ToString("MMMM dd, yyyy", System.Globalization.CultureInfo.InvariantCulture)
                            </p>
                        </div>
                    </div>

                </div>
            </section>
        </div>
    </main>
</div>
