@model PortalAboutEverything.Models.VideoLibrary.VideoLibraryVideoViewModel

@{
    ViewBag.Title = $"{Model.FileName} - Player";
    Layout = "_LayoutVideoLibrary";
}

@section Style
{
    <link rel="stylesheet" href="/css/video-library/player.css">
}

@section TopScripts
{
    <script src="/js/VideoLibrary/like.js"></script>
    <script src="/js/VideoLibrary/video-selection-controls.js"></script>
}

<div class="video-state-control-bar">
    <div class="video-state-controls">
        <button class="video-state-button" onclick="changeVideoLikeState(@($"\"{Model.Id}\""), true); goToRandomVideo(false);">
            <div class="video-state-button-info">
                <div class="video-state-button-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -960 960 960">
                        <path d="m480-120-58-52q-101-91-167-157T150-447.5Q111-500 95.5-544T80-634q0-94 63-157t157-63q52 0 99 22t81 62q34-40 81-62t99-22q94 0 157 63t63 157q0 46-15.5 90T810-447.5Q771-395 705-329T538-172l-58 52Z"/>
                    </svg>
                </div>
                <div class="video-state-button-title">
                    <span>Like</span>
                </div>
            </div>
            <div class="video-state-button-like-active-mark"></div>
        </button>
        <button class="video-state-button" onclick="deleteVideo()">
            <div class="video-state-button-info">
                <div class="video-state-button-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -960 960 960">
                        <path d="M320-200v-560l440 280-440 280Z"/>
                    </svg>
                </div>
                <div class="video-state-button-title">
                    <span>Delete</span>
                </div>
            </div>
            <div class="video-state-button-delete-active-mark"></div>
        </button>
    </div>
</div>
<div class="player">
    <div class="player-container">
        <div class="player-video-bg"></div>
        <div class="player-video">
            <video autofocus controls src="/VideoLibrary/GetVideo/@Model.Id"></video>
        </div>
    </div>
    <div title="@Model.FileName" class="player-video-info">
        <div class="player-video-title">
            <span>@Model.FileName</span>
        </div>
        <div class="player-video-folder">
            <span>\@Model.FileFolder</span>
        </div>
    </div>
</div>