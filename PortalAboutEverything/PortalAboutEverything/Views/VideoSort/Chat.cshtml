@model List<PortalAboutEverything.Models.VideoSort.ChatMessageViewModel>

<div class="ancient-main">
    <div class="ancient-title">
        <span>New message:</span>
    </div>
    <form class="ancient-form" action="/VideoSort/Chat" method="post">
        <label class="ancient-form-element" for="ancient-form-element-input">
            <span>Username:</span>
            <input name="username" type="text">
        </label>
        <label class="ancient-form-element" for="ancient-form-element-input">
            <span>Message:</span>
            <textarea name="message"></textarea>
        </label>
        <div class="ancient-form-element-submit">
            <input type="submit" value="Send Message">
        </div>
    </form>
    <div class="ancient-title">
        <span>Message List:</span>
    </div>
    <div class="ancient-chat-message-list">
        @foreach (var message in Model)
        {
            <div class="ancient-chat-message">
                <div class="ancient-chat-message-username">
                    <span>@message.Username</span>
                </div>
                <div class="ancient-chat-message-message">
                    <span>@message.Message</span>
                </div>
                <div class="ancient-chat-message-bottom-info">
                    @if (message.IsModified)
                    {
                        <div class="ancient-chat-message-modified-mark">
                            <span>modified</span>
                        </div>
                    }
                    <div class="ancient-chat-message-timestamp">
                        <span>@message.Timestamp</span>
                    </div>
                </div>
                <div class="ancient-chat-message-buttons">
                    <a class="ancient-chat-message-delete-button" href="/VideoSort/ChatMessageDelete/@message.Id">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -960 960 960">
                            <path d="m376-300 104-104 104 104 56-56-104-104 104-104-56-56-104 104-104-104-56 56 104 104-104 104 56 56Zm-96 180q-33 0-56.5-23.5T200-200v-520h-40v-80h200v-40h240v40h200v80h-40v520q0 33-23.5 56.5T680-120H280Zm400-600H280v520h400v-520Zm-400 0v520-520Z"/>
                        </svg>
                    </a>
                    <a class="ancient-chat-message-modify-button" href="/VideoSort/ChatMessageUpdate/@message.Id">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -960 960 960">
                            <path d="M200-200h57l391-391-57-57-391 391v57Zm-80 80v-170l528-527q12-11 26.5-17t30.5-6q16 0 31 6t26 18l55 56q12 11 17.5 26t5.5 30q0 16-5.5 30.5T817-647L290-120H120Zm640-584-56-56 56 56Zm-141 85-28-29 57 57-29-28Z"/>
                        </svg>
                    </a>
                </div>
            </div>
        }
    </div>
</div>